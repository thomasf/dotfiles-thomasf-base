# ------------------------------------------------------------------------------
# BASH
#
log "bash config"
shopt -s checkwinsize

if [ ! ${__OS} = darwin ]; then
  shopt -s checkjobs
  shopt -s cdspell
  shopt -s dirspell
fi
if [ $UID != 0 ]; then
  export HISTFILE=~/.bash_history
else
  export HISTFILE=~/.bash_history_root
fi
shopt -s histappend
export HISTCONTROL=ignoredups
